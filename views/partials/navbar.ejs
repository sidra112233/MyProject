<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Navbar with Bootstrap</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
   /* Navbar container needs relative for highlight positioning */
.navbar-nav {
  position: relative;
  display: flex;
  gap: 10px;
}
.navbar {
  background-color: rgba(255, 255, 255, 0.85) !important;
  backdrop-filter: blur(10px);
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
}

/* Highlight background */
.navbar-nav::before {
  content: '';
  position: absolute;
  bottom: 5px;
  height: 35px;
  background: #ffcc80;
  border-radius: 20px;
  transition: all 0.3s ease;
  z-index: 0;
  width: 0;
  left: 0;
}

/* Individual link */
.nav-link {
  position: relative;
  z-index: 1;
  padding: 8px 18px !important;
  border-radius: 20px;
  transition: color 0.3s;
}

/* Active or hovered link triggers highlight */
.nav-link:hover,
.nav-link.active {
  color: #000;
}

/* JavaScript will update this class to move highlight */
.navbar-nav .highlight {
  position: absolute;
  bottom: 5px;
  height: 35px;
  background: #ffcc80;
  border-radius: 20px;
  transition: all 0.3s ease;
  z-index: 0;
}
/* Show dropdown on hover */
.nav-item.dropdown:hover .dropdown-menu {
  display: block;
  opacity: 1;
  visibility: visible;
  transform: translateY(0);
}

/* Optional: smooth dropdown animation */
.dropdown-menu {
  display: block;
  opacity: 0;
  visibility: hidden;
  transform: translateY(10px);
  transition: all 0.3s ease;
  margin-top: 0;
  border-radius: 8px;
  pointer-events: auto;
  z-index: 1000;
}
  </style>
</head>

<body>

<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm py-3 sticky-top">
  <div class="container">
    <a class="navbar-brand" href="/">MyCompany</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
      aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ms-auto">

        <li class="nav-item">
          <a class="nav-link" href="/about">About us</a>
        </li>

        <li class="nav-item">
          <a class="nav-link" href="/#why">Why us</a>
        </li>

        <li class="nav-item">
          <a class="nav-link" href="/#solutions">Solutions</a>
        </li>

        <!-- Industries Dropdown -->
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="industriesDropdown" role="button"
            data-bs-toggle="dropdown" aria-expanded="false">
            Industries
          </a>
          <ul class="dropdown-menu" aria-labelledby="industriesDropdown">
            <li><a class="dropdown-item" href="/ecommerce">Ecommerce</a></li>
            <li><a class="dropdown-item" href="/government">Government & Public Services</a></li>
            <li><a class="dropdown-item" href="/realestate">Real Estate</a></li>
            <li><a class="dropdown-item" href="/medical">Medical Services</a></li>
            <li><a class="dropdown-item" href="/fastfood">Fast Food</a></li>
            <li><a class="dropdown-item" href="/travel">Travel & Tourism</a></li>
            <li><a class="dropdown-item" href="/facility">Facility Management</a></li>
          </ul>
        </li>

        <!-- Packages Dropdown -->
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="packagesDropdown" role="button"
            data-bs-toggle="dropdown" aria-expanded="false">
            Packages
          </a>
          <ul class="dropdown-menu" aria-labelledby="packagesDropdown">
            <li><a class="dropdown-item" href="/inbound">Inbound Calls</a></li>
            <li><a class="dropdown-item" href="/digital">Digital</a></li>
          </ul>
        </li>

        <li class="nav-item">
          <a class="nav-link" href="/contact">Contact</a>
        </li>

      </ul>
    </div>
  </div>
</nav>

<!-- Bootstrap JS Bundle -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
<script>
  document.addEventListener("DOMContentLoaded", function () {
    const links = document.querySelectorAll(".nav-link");
    const nav = document.querySelector(".navbar-nav");

    const highlight = document.createElement("div");
    highlight.classList.add("highlight");
    nav.appendChild(highlight);

    function moveHighlight(link) {
      const rect = link.getBoundingClientRect();
      const navRect = nav.getBoundingClientRect();
      highlight.style.width = `${rect.width}px`;
      highlight.style.left = `${rect.left - navRect.left}px`;
    }

    // Move to active link on load
    const active = document.querySelector(".nav-link.active") || links[0];
    moveHighlight(active);

    links.forEach(link => {
      link.addEventListener("mouseenter", () => moveHighlight(link));
      link.addEventListener("click", () => {
        links.forEach(l => l.classList.remove("active"));
        link.classList.add("active");
        moveHighlight(link);
      });
    });

    window.addEventListener("resize", () => {
      const current = document.querySelector(".nav-link.active");
      if (current) moveHighlight(current);
    });
  });
  // Disable Bootstrap dropdown toggle on click for hover items
  document.addEventListener('DOMContentLoaded', function () {
    const hoverDropdowns = ['industriesDropdown', 'packagesDropdown'];

    hoverDropdowns.forEach(id => {
      const trigger = document.getElementById(id);
      if (trigger) {
        trigger.removeAttribute('data-bs-toggle');
      }
    });
  });
</script>
