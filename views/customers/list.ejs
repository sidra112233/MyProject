<!DOCTYPE html>
<html lang="en">
<head>
    <title>Customer List</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>
    <style>
        :root {
            --yale-blue: #134074;
            --berkeley-blue: #13315c;
            --oxford-blue: #0b2545;
            --powder-blue: #8da9c4;
            --mint-cream: #eef4ed;
            --hover-highlight: var(--powder-blue);
        }
        
        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, var(--mint-cream), #f8fafc);
            min-height: 100vh;
            padding: 20px;
            color: var(--oxford-blue);
        }
        
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 30px;
            background: white;
            border-radius: 20px;
            box-shadow: 0 15px 35px rgba(19, 64, 116, 0.1);
            animation: fadeInUp 0.8s ease forwards;
        }
        
        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        h2 {
            font-weight: 700;
            color: var(--yale-blue);
            margin-bottom: 30px;
            position: relative;
            display: inline-block;
            padding-bottom: 10px;
        }
        
        h2::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 60px;
            height: 4px;
            background: linear-gradient(90deg, var(--yale-blue), var(--berkeley-blue));
            border-radius: 2px;
        }
        
        .breadcrumb {
            background-color: transparent;
            padding: 0;
            margin-bottom: 20px;
            font-size: 0.9rem;
        }
        
        .breadcrumb-item + .breadcrumb-item::before {
            content: ">";
            color: var(--powder-blue);
        }
        
        .breadcrumb-item.active {
            color: var(--yale-blue);
            font-weight: 600;
        }
        
        .filter-section {
            background-color: rgba(141, 161, 196, 0.05);
            padding: 20px;
            border-radius: 15px;
            margin-bottom: 30px;
            box-shadow: 0 5px 15px rgba(19, 64, 116, 0.05);
        }
        
        .filter-row {
            display: flex;
            flex-wrap: wrap;
            gap: 15px;
            align-items: flex-end;
        }
        
        .filter-group {
            flex: 1;
            min-width: 200px;
        }
        
        .filter-group label {
            display: block;
            margin-bottom: 8px;
            font-weight: 500;
            color: var(--berkeley-blue);
        }
        
        .filter-group input,
        .filter-group select {
            width: 100%;
            padding: 10px 15px;
            border: 1px solid rgba(19, 64, 116, 0.2);
            border-radius: 8px;
            font-family: 'Poppins', sans-serif;
            transition: all 0.3s ease;
        }
        
        .filter-group input:focus,
        .filter-group select:focus {
            border-color: var(--yale-blue);
            box-shadow: 0 0 0 3px rgba(19, 64, 116, 0.1);
            outline: none;
        }
        
        .btn-submit {
            background-color: var(--yale-blue);
            color: white;
            border: none;
            padding: 10px 25px;
            border-radius: 8px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 8px;
        }
        
        .btn-submit:hover {
            background-color: var(--berkeley-blue);
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(19, 64, 116, 0.2);
        }
        
        .table-container {
            overflow-x: auto;
            border-radius: 15px;
            box-shadow: 0 10px 25px rgba(19, 64, 116, 0.08);
            animation: slideIn 1s ease forwards;
            animation-delay: 0.3s;
            opacity: 0;
        }
        
        @keyframes slideIn {
            from {
                opacity: 0;
                transform: translateX(-20px);
            }
            to {
                opacity: 1;
                transform: translateX(0);
            }
        }
        
        .table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0;
            margin-bottom: 0;
            border-radius: 15px;
            overflow: hidden;
        }
        
        .table thead th {
            background: linear-gradient(135deg, var(--yale-blue), var(--berkeley-blue));
            color: white;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1px;
            padding: 18px 15px;
            border: none;
            position: relative;
        }
        
        .table thead th:first-child {
            border-top-left-radius: 15px;
        }
        
        .table thead th:last-child {
            border-top-right-radius: 15px;
        }
        
        .table tbody tr {
            transition: all 0.3s ease;
        }
        
        .table tbody tr:nth-child(even) {
            background-color: rgba(141, 161, 196, 0.05);
        }
        
        .table tbody tr:hover {
            background-color: rgba(141, 161, 196, 0.1);
            transform: scale(1.01);
            box-shadow: 0 5px 15px rgba(19, 64, 116, 0.05);
        }
        
        .table td {
            padding: 15px;
            border-bottom: 1px solid rgba(19, 64, 116, 0.1);
            vertical-align: middle;
        }
        
        .table tbody tr:last-child td {
            border-bottom: none;
        }
        
        .table tbody tr:last-child td:first-child {
            border-bottom-left-radius: 15px;
        }
        
        .table tbody tr:last-child td:last-child {
            border-bottom-right-radius: 15px;
        }
        
        .empty-state {
            text-align: center;
            padding: 40px 20px;
            animation: fadeIn 1s ease forwards;
            animation-delay: 0.5s;
            opacity: 0;
        }
        
        @keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }
        
        .empty-icon {
            font-size: 4rem;
            color: var(--powder-blue);
            margin-bottom: 20px;
        }
        
        .empty-title {
            font-size: 1.5rem;
            font-weight: 600;
            color: var(--yale-blue);
            margin-bottom: 10px;
        }
        
        .empty-description {
            color: var(--oxford-blue);
            max-width: 500px;
            margin: 0 auto;
        }
        
        .company-name {
            font-weight: 600;
            color: var(--yale-blue);
            display: flex;
            align-items: center;
        }
        
        .company-icon {
            width: 36px;
            height: 36px;
            border-radius: 50%;
            background: linear-gradient(135deg, var(--yale-blue), var(--berkeley-blue));
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 12px;
            font-size: 16px;
        }
        
        .industry-badge {
            display: inline-block;
            padding: 5px 12px;
            background-color: var(--mint-cream);
            color: var(--yale-blue);
            border-radius: 20px;
            font-size: 0.85rem;
            font-weight: 500;
        }
        
        .did-number {
            font-family: 'Courier New', monospace;
            font-weight: 600;
            color: var(--berkeley-blue);
        }
        
        .added-on {
            color: var(--powder-blue);
            font-size: 0.9rem;
        }
        
        .action-buttons {
            display: flex;
            gap: 10px;
        }
        
        .action-btn {
            width: 36px;
            height: 36px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            background: white;
            border: 1px solid rgba(19, 64, 116, 0.2);
            color: var(--yale-blue);
            cursor: pointer;
            transition: all 0.3s ease;
        }
        
        .action-btn:hover {
            background: var(--yale-blue);
            color: white;
            transform: scale(1.1);
        }
        
        /* Responsive adjustments */
        @media (max-width: 768px) {
            .container {
                padding: 15px;
            }
            
            h2 {
                font-size: 1.5rem;
            }
            
            .filter-row {
                flex-direction: column;
            }
            
            .filter-group {
                width: 100%;
            }
            
            .btn-submit {
                width: 100%;
                justify-content: center;
            }
            
            .table {
                font-size: 0.9rem;
            }
            
            .table thead th {
                padding: 12px 10px;
                font-size: 0.8rem;
            }
            
            .table td {
                padding: 12px 10px;
            }
            
            .company-name {
                flex-direction: column;
                align-items: flex-start;
            }
            
            .company-icon {
                margin-right: 0;
                margin-bottom: 8px;
            }
        }
    </style>
</head>
<body>
 <%- include('../partials/dashboardnav') %>
    <div class="container">        
        <!-- Filter Section -->
        <div class="filter-section">
            <div class="filter-row">
                <div class="filter-group">
                    <label for="industry">Industry</label>
                    <select id="industry" class="form-select">
                        <option>All Industries</option>
                        <option>Travel & Tourism</option>
                        <option>Consumer Electronics</option>
                        <option>Technology</option>
                        <option>Healthcare</option>
                    </select>
                </div>
                
                <div class="filter-group">
                    <label for="search">Search</label>
                    <input type="text" id="search" placeholder="Search customers...">
                </div>
                
                <div class="filter-group">
                    <label for="dateAdded">Date Added</label>
                    <input type="text" id="dateAdded" value="10 Jul, 2025 - 08 Aug, 2025">
                </div>
                
                <div class="filter-group">
                    <button class="btn-submit">
                        <i class="fas fa-search"></i>
                        Submit
                    </button>
                </div>
            </div>
        </div>
        
        <% if (customers.length > 0) { %>
            <div class="table-container">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Company</th>
                            <th>Industry</th>
                            <th>DID Number</th>
                            <th>Added On</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% customers.forEach((cust, index) => { %>
                            <tr class="animate__animated animate__fadeInUp" style="animation-delay: <%= index * 0.1 %>s;">
                                <td>
                                    <div class="company-name">
                                        <div class="company-icon">
                                            <i class="fas fa-building"></i>
                                        </div>
                                        <%= cust.company_name %>
                                    </div>
                                </td>
                                <td>
                                    <span class="industry-badge"><%= cust.industry %></span>
                                </td>
                                <td class="did-number"><%= cust.did_number %></td>
                                <td class="added-on"><%= cust.added_on %></td>
                                <td>
                                    <div class="action-buttons">
                                        <button class="action-btn" title="View Details" onclick="viewCustomer('<%= cust.id %>')">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                        <button class="action-btn" title="Edit" onclick="editCustomer('<%= cust.id %>')">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <button class="action-btn" title="Delete" onclick="deleteCustomer('<%= cust.id %>')">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                         <button class="action-btn" title="Settings" onclick="settingsCustomer('<%= cust.id %>')">
                                            <i class="fas fa-cog"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        <% } else { %>
            <div class="empty-state">
                <div class="empty-icon">
                    <i class="fas fa-inbox"></i>
                </div>
                <div class="empty-title">No Customers Found</div>
                <div class="empty-description">
                    There are no customers in the database. Add customers to see them listed here.
                </div>
            </div>
        <% } %>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function viewCustomer(id) {
            // In a real application, this would navigate to a customer details page
            alert(`Viewing customer with ID: ${id}`);
        }
        
        function editCustomer(id) {
            // In a real application, this would open an edit form or navigate to an edit page
            alert(`Editing customer with ID: ${id}`);
        }
        
        function deleteCustomer(id) {
            if (confirm('Are you sure you want to delete this customer?')) {
                // In a real application, this would send a delete request to the server
                alert(`Deleting customer with ID: ${id}`);
                // After successful deletion, you might want to reload the page or remove the row from the table
            }
        }
        
        function settingsCustomer(id) {
            // In a real application, this would open settings for the customer
            alert(`Settings for customer with ID: ${id}`);
        }
    </script>
</body>
</html>